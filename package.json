{
	"preview": true,
	"name": "xray-beams",
	"displayName": "Xray Beams",
	"description": "Xray test management integration for vscode",
	"version": "2020.7.0-rc",
	"publisher": "danzelbel",
	"author": {
		"name": "danzelbel"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/danzelbel/xray-beams"
	},
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"jira",
		"xray",
		"bdd",
		"gherkin",
		"extension"
	],
	"license": "MIT",
	"activationEvents": [
		"onFileSystem:xbfs",
		"onCommand:xrayBeams.workspaceInit",
		"onCommand:xrayBeams.refresh"
	],
	"main": "./out/extension.js",
	"types": "./index.d.ts",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "orphansView",
					"name": "XrayBeams Orphans"
				},
				{
					"id": "preConditionsView",
					"name": "XrayBeams Pre-Conditions"
				}
			]
		},
		"commands": [
			{
				"command": "xrayBeams.workspaceInit",
				"title": "XrayBeams: Setup Workspace"
			},
			{
				"command": "xrayBeams.refresh",
				"title": "XrayBeams: Refresh"
			},
			{
				"command": "xrayBeams.orphansView.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "xrayBeams.orphansView.openFile",
				"title": "Open File",
				"icon": "$(go-to-file)"
			},
			{
				"command": "xrayBeams.orphansView.addToFeature",
				"title": "Add to Current Feature",
				"icon": "$(add)"
			},
			{
				"command": "xrayBeams.preConditionsView.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "xrayBeams.preConditionsView.openFile",
				"title": "Open File",
				"icon": "$(go-to-file)"
			},
			{
				"command": "xrayBeams.preConditionsView.addToFeature",
				"title": "Add to Current Feature",
				"icon": "$(add)"
			},
			{
				"command": "xrayBeams.scm.commit",
				"title": "Commit",
				"icon": "$(check)"
			},
			{
				"command": "xrayBeams.scm.cleanAll",
				"title": "Discard All Changes",
				"icon": "$(discard)"
			},
			{
				"command": "xrayBeams.scm.openFile",
				"title": "Open File",
				"icon": "$(go-to-file)"
			},
			{
				"command": "xrayBeams.scm.clean",
				"title": "Discard Changes",
				"icon": "$(discard)"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "xrayBeams.workspaceInit",
					"when": "workbenchState != workspace"
				},
				{
					"command": "xrayBeams.refresh",
					"when": "workbenchState == workspace"
				}
			],
			"view/title": [
				{
					"command": "xrayBeams.orphansView.refresh",
					"when": "view == orphansView",
					"group": "navigation"
				},
				{
					"command": "xrayBeams.preConditionsView.refresh",
					"when": "view == preConditionsView",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "xrayBeams.orphansView.openFile",
					"when": "view == orphansView && viewItem == scenario",
					"group": "inline0"
				},
				{
					"command": "xrayBeams.orphansView.addToFeature",
					"when": "view == orphansView && viewItem == scenario",
					"group": "inline"
				},
				{
					"command": "xrayBeams.preConditionsView.openFile",
					"when": "view == preConditionsView && viewItem == condition",
					"group": "inline0"
				},
				{
					"command": "xrayBeams.preConditionsView.addToFeature",
					"when": "view == preConditionsView && viewItem == condition",
					"group": "inline"
				}
			],
			"scm/title": [
				{
					"command": "xrayBeams.scm.commit",
					"when": "scmProvider == xray",
					"group": "navigation"
				},
				{
					"command": "xrayBeams.scm.cleanAll",
					"when": "scmProvider == xray",
					"group": "2_stage"
				}
			],
			"scm/resourceGroup/context": [
				{
					"command": "xrayBeams.scm.cleanAll",
					"when": "scmProvider == xray && scmResourceGroup == workingTree",
					"group": "1_modification"
				},
				{
					"command": "xrayBeams.scm.cleanAll",
					"when": "scmProvider == xray && scmResourceGroup == workingTree",
					"group": "inline"
				}
			],
			"scm/resourceFolder/context": [
				{
					"command": "xrayBeams.scm.clean",
					"when": "scmProvider == xray && scmResourceGroup == workingTree",
					"group": "1_modification"
				},
				{
					"command": "xrayBeams.scm.clean",
					"when": "scmProvider == xray && scmResourceGroup == workingTree",
					"group": "inline"
				}
			],
			"scm/resourceState/context": [
				{
					"command": "xrayBeams.scm.clean",
					"when": "scmProvider == xray && scmResourceGroup == workingTree",
					"group": "1_modification"
				},
				{
					"command": "xrayBeams.scm.openFile",
					"when": "scmProvider == xray && scmResourceGroup == workingTree",
					"group": "inline0"
				},
				{
					"command": "xrayBeams.scm.clean",
					"when": "scmProvider == xray && scmResourceGroup == workingTree",
					"group": "inline"
				}
			]
		},
		"configuration": {
			"title": "Xray Beams",
			"properties": {
				"xrayBeams.jira.baseUrl": {
					"type": "string",
					"format": "uri"
				},
				"xrayBeams.jira.jql.orphans": {
					"type": "string",
					"description": "Additional jql filter"
				},
				"xrayBeams.jira.jql.preConditions": {
					"type": "string",
					"description": "Additional jql filter"
				},
				"xrayBeams.jira.projectKey": {
					"type": "string"
				},
				"xrayBeams.jira.username": {
					"type": "string"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"deploy": "vsce publish --yarn"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vsce": "^1.77.0",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"base-64": "^0.1.0",
		"cucumber-messages": "^8.0.0",
		"gherkin": "^9.0.0",
		"node-fetch": "^2.6.0"
	}
}
